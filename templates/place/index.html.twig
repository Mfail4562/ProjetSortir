{% extends 'base.html.twig' %}

{% block title %}Place index{% endblock %}

{% block body %}
    <h1 class="text-center">Place List</h1>
    <section>
        <div class="container py-5">
            <div class="row">
                <a href="{{ path('app_place_new') }}">Create new Place</a>
                {% for place in places %}
                    <div class="card mb-4 border-dark">
                        <div class="card-body text-center ">
                            <img
                                    src="{{ asset('img/travelLogo/place.jpg') }}"
                                    alt="avatar" class="rounded-circle img-fluid"
                                    style="width: 150px"/>
                            <h5 class="my-3">{{ place.name }}</h5>
                            <p class="text-muted mb-1"> Street : {{ place.street }}</p>
                            <p class="text-muted mb-1"> Latitude : {{ place.latitude }}</p>
                            <p class="text-muted mb-1"> Longitude : {{ place.longitude }}</p>

                            <div class="d-flex justify-content-center mb-2">
                                <a href="{{ path('app_place_show', {'id': place.id}) }}">show</a>
                            </div>
                            <div class="d-flex justify-content-center mb-2">
                                <a href="{{ path('app_place_edit', {'id': place.id}) }}">edit</a>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}
