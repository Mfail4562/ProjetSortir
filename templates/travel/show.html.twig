{% extends 'base.html.twig' %}

{% block title %}Travel{% endblock %}

{% block body %}


    <div class="margin-20">
        <label for="campusOrganiser">Le nom de la sortie contient</label>
        <input type="text" name="campusOrganiser" id="campusOrganiser" value="{{ nameTravel }}">
    </div>

    <div class="margin-20">
        <div class="dateStart">
            <div>
                <label for="dateValid">Entre</label>
                <input type="datetime-local" name="dateStart" id="dateStart" value="{{ dateStart }}">
            </div>
            <div>
                <label for="$duration">Et</label>
                <input type="datetime-local" name="$duration" id="$duration"  value="{{ $duration }}">
            </div>
        </div>
        <div class="alert alert-danger" role="alert" {% if dateValid %} style="display:none;" {% endif %} >La date de début doit être inférieur a la date de fin</div>
    </div>
    </div>
    <div>
        <div >
            <input type="checkbox" id="sortie_orga" name="sortie_orga" {% if orga %} checked {% endif %}>
            <label for="sortie_orga">Sortie dont je suis l'organisateur/trice</label>
        </div>

        <div class="margin-10">
            <input type="checkbox" id="sortie_insc" name="sortie_insc" {% if inscrit %} checked {% endif %}>
            <label for="sortie_insc">Sortie au quel je suis inscrit/e</label>
        </div>

        <div class="margin-10">
            <input type="checkbox" id="sortie_n_insc" name="sortie_n_insc" {% if nonInscrit %} checked {% endif %}>
            <label for="sortie_n_insc">Sortie au quel je ne suis pas inscrit/e</label>
        </div>

        <div class="margin-10">
            <input type="checkbox" id="sortie_passee" name="sortie_passee" {% if passer %} checked {% endif %}>
            <label for="sortie_passee">Sortie passées</label>
        </div>
    </div>




    <h1>Travel</h1>
        <div class="container py-5">
            <div class="row">
                <div class="card border-white">
                    <img src="{{ asset('img/travelLogo/illustration.jpg') }}" alt="avatar-center" class="rounded-circle img-fluid" style="width:150px">
                    <h5 class="my-3">{{ travel.name }}</h5>
                    <p class="text-muted mb-1">Numero de voyage: {{ travel.id }}</p><hr />
                    <p class="text-muted mb-1">Date debut du voyage: {{ travel.dateStart ? travel.dateStart|date('Y-m-d ') : ''}}</p><hr />
                    <p class="text-muted mb-1">Date fin du voyage: {{ travel.duration ? travel.duration|date('Y-m-d ') : '' }}</p><hr />
                    <p class="text-muted mb-1">Date fin des inscription: {{ travel.limitDateSubscription ? travel.limitDateSubscription|date('Y-m-d ') : '' }}</p><hr />
                    <p class="text-muted mb-1">Nombre maximale par voyage: {{ travel.nbMaxTraveler }}</p><hr />
                    <p class="text-muted mb-1">Info voyage: {{ travel.infos }}</p><hr/>
                    {% for subscriptionedTravelers in travel %}
                        <tr>
                            <td>{{ subscriptionedTravelers.lastname }} {{ subscriptionedTravelers.firstname }}</td>
                            <td>{{ subscriptionedTravelers.campus }} </td>
                        </tr>
                    {% endfor %}
                    <div class="card-body text-center">
                        <a class="btn btn-secondary m-2 my-sm-0 text-muted mb-1"
                        {{ include('travel/_delete_form.html.twig') }}</a>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
