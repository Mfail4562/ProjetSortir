{% extends 'base.html.twig' %}

{% block title %}Travel{% endblock %}

{% block body %}
    <h1>Travel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ travel.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ travel.name }}</td>
            </tr>
            <tr>
                <th>DateStart</th>
                <td>{{ travel.dateStart ? travel.dateStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ travel.duration ? travel.duration|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LimitDateSubscription</th>
                <td>{{ travel.limitDateSubscription ? travel.limitDateSubscription|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbMaxTraveler</th>
                <td>{{ travel.nbMaxTraveler }}</td>
            </tr>
            <tr>
                <th>Infos</th>
                <td>{{ travel.infos }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_travel_index') }}">back to list</a>

    <a href="{{ path('app_travel_edit', {'id': travel.id}) }}">edit</a>

    {{ include('travel/_delete_form.html.twig') }}
{% endblock %}
